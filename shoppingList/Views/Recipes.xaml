<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shoppingList.Views.Recipes"
             xmlns:views="clr-namespace:shoppingList.Views"
             xmlns:ViewModels="clr-namespace:shoppingList.ViewModels"
             BindingContext="{x:Static ViewModels:RecipesViewModel.Instance}"
             BackgroundColor="#1f1f1f">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Dodaj przepis"
                     Command="{Binding NewRecipeCommand}"
                     IconImageSource="{FontImage Glyph='+', Size=22, Color=White}" />
        <ToolbarItem Text="Dodaj produkt"
             Command="{Binding AddProductCommand}"
             IconImageSource="{FontImage Glyph='+', Size=22, Color=White}" />
    </ContentPage.ToolbarItems>

    <CollectionView ItemsSource="{Binding Recipes}" IsGrouped="False">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="ViewModels:RecipeItemViewModel">
                <views:RecipeItem />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>