<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shoppingList.Views.ShopItem"
             xmlns:ViewModels="clr-namespace:shoppingList.ViewModels"
             xmlns:views="clr-namespace:shoppingList.Views"
             x:DataType="ViewModels:ShopItemViewModel">

    <VerticalStackLayout>
        <Border Stroke="#8a41a6"
                BackgroundColor="#8a41a6"
                StrokeThickness="2"
                Margin="15"
                Padding="15"
                StrokeShape="RoundRectangle 20,20,20,20">
            <Label  Text="{Binding ShopName}"
                    FontAttributes="Bold"
                    FontSize="25"
                    Margin="30,0,0,0"
                    TextColor="White"
                    VerticalOptions="Center"/>
        </Border>
        
        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Products}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="ViewModels:ProductItemViewModel">
                    <views:ProductItem />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentView>
