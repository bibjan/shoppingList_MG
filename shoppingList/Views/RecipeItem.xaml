<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shoppingList.Views.RecipeItem"
             xmlns:ViewModels="clr-namespace:shoppingList.ViewModels"
             xmlns:views="clr-namespace:shoppingList.Views"
             x:DataType="ViewModels:RecipeItemViewModel">
    
    <VerticalStackLayout>

        <Border Stroke="#8a41a6"
                BackgroundColor="#8a41a6"
                StrokeThickness="2"
                Margin="15"
                Padding="15"
                StrokeShape="RoundRectangle 20,20,20,20">
            <VerticalStackLayout>
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      VerticalOptions="Center">

                    <Label  Grid.Column="0"
                            Text="{Binding RecipeName}"
                            FontAttributes="Bold"
                            FontSize="25"
                            Margin="30,0,0,0"
                            TextColor="White"
                            VerticalOptions="Center">
                    </Label>
                    <Button Grid.Column="1"
                            BackgroundColor="#703587"
                            Command="{Binding ImportToListCommand}"
                            HorizontalOptions="End"
                            TextColor="White"
                            Text="Importuj do listy"/>
                </Grid>
                <Label Text="{Binding RecipeDescription}"
                       FontSize="14"
                       Margin="30,10,0,0"
                       TextColor="LightGray"
                       VerticalOptions="Center" />
            </VerticalStackLayout>
        </Border>

        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Products}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="ViewModels:ProductItemViewModel">
                    <views:ProductItemRecipe />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentView>
